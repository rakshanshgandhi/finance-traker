{% extends 'base.html.twig' %}

{% block title %}Error {{ code }}{% endblock %}

{% block body %}
    <div class="flex items-center py-14 justify-center max-h-screen bg-gray-100 overflow-hidden">
        <div class="text-center">
            <h1 class="text-6xl font-bold text-[#1a1a1a] mb-4">Error {{ code }}</h1>
            <p class="text-lg text-gray-700 mb-8">{{ message }}</p>
            <a href="{{ path('app_home') }}" 
               class="inline-flex items-center justify-center bg-[#1a1a1a] text-white px-6 py-3 rounded-full shadow hover:bg-[#4d4d4d] transition duration-300">
                <i class="fas fa-arrow-left mr-2"></i> Back to Home
            </a>
        </div>
    </div>
{% endblock %}
