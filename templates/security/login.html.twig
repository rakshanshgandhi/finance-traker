{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container mx-auto pt-24">
        <div class="w-4/5 sm:w-1/3 mx-auto text-center">
            {% if error %}
                <div class="alert alert-danger text-red-600 mb-4 p-2 rounded-lg border border-red-400 bg-red-100">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4">
                    You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}" class="text-[#808080] hover:text-[#b3b3b3] transition duration-200">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-3xl text-[#1a1a1a] font-extrabold pb-6">Login</h1>

            <form method="post">
                <!-- Email Input -->
                <input 
                    type="email" 
                    value="{{ last_username }}" 
                    name="email" 
                    id="inputEmail" 
                    class="bg-transparent block mt-6 mx-auto border-b-2 w-full h-12 text-xl outline-none text-[#1a1a1a] placeholder-[#808080]" 
                    placeholder="Email"
                    autocomplete="email" 
                    required 
                    autofocus
                >

                <!-- Password Input -->
                <input 
                    type="password" 
                    name="password" 
                    id="inputPassword" 
                    class="bg-transparent block mt-6 mx-auto border-b-2 w-full h-12 text-xl outline-none text-[#1a1a1a] placeholder-[#808080]" 
                    autocomplete="current-password" 
                    placeholder="Password"
                    required
                >

                <!-- CSRF Token -->
                <input 
                    type="hidden" 
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <!-- Submit Button -->
                <button 
                    class="uppercase mt-6 bg-[#1a1a1a] text-white text-lg w-full py-3 rounded-xl hover:bg-[#4d4d4d] transition-colors duration-300"
                    type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
{% endblock %}
