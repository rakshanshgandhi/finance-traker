{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mx-auto pt-24">
        <div class="w-full sm:w-1/3 mx-auto text-center bg-gray-100 p-8 rounded-lg">
            <h1 class="text-3xl text-[#1a1a1a] font-extrabold pb-6">
                Register
            </h1>

            {{ form_start(registrationForm) }}
            
            <!-- Email Field -->
            <div class="mt-4 w-full">
                {{ form_row(registrationForm.email, {'attr': {'class': 'bg-transparent block mt-4 mx-auto border-b-2 w-full h-12 text-xl outline-none text-[#1a1a1a] placeholder-[#808080]'}}) }}
            </div>

            <!-- Password Field -->
            <div class="mt-4 w-full">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'bg-transparent block mt-4 mx-auto border-b-2 w-full h-12 text-xl outline-none text-[#1a1a1a] placeholder-[#808080]'}}) }}
            </div>

            <!-- Agree Terms Checkbox -->
            <div class="mt-4 w-full flex items-center justify-start">
                <div class="mr-2">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'text-[#808080]'}}) }}
                </div>
                <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-[#808080]">I agree to the terms</label>
            </div>

            <!-- Submit Button -->
            <div class="mt-8 w-full">
                <button 
                    type="submit" 
                    class="uppercase mt-6 bg-[#1a1a1a] text-white text-lg w-full py-3 rounded-xl hover:bg-[#4d4d4d] transition-colors duration-300">
                    Register
                </button>
            </div>
            
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
